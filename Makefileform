.PHONY = compile run jar runjar zip all clean

JC = "Your Java Path"/bin/javac

JRE =  "Your Java Path"/bin/java

MP = --module-path "Your JavaFX Path"/lib --add-modules javafx.controls,javafx.fxml -Dfile.encoding=UTF-8 

CP = -classpath "Your Project Path":"Your JavaFX Path"/lib/javafx.base.jar:"Your JavaFX Path"/lib/javafx.controls.jar:"Your JavaFX Path"/lib/javafx.fxml.jar:"Your JavaFX Path"/lib/javafx.graphics.jar:"Your JavaFX Path"/lib/javafx.media.jar:"Your JavaFX Path"/lib/javafx.swing.jar:"Your JavaFX Path"/lib/javafx.web.jar:"Your JavaFX Path"/lib/javafx-swt.jar:"Your JavaFX Path"/lib/src.zip

SRC = application/*.java   
APP = application.Main

ARGS = deb mark sapan # place your command line args here

compile:
$(JC) $(CP) $(SRC)

run:
$(JRE) $(MP) $(CP) $(APP) $(ARGS)

jar:
      jar -cvmf manifest.txt executable.jar .

runjar:
        java -jar executable.jar

zip:
        jar -cMf ateam.zip README.txt executable.jar screenshot* application


clean:
        rm -f application/*.class
        rm -f executable.jar